{
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["es6"],
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "outDir": "build",
    "paths": { "*": ["types/*"] },
    "rootDir": "source",
    "strictFunctionTypes": true,
    "strictNullChecks": false,
    "target": "es6"
  },
  "compileOnSave": true,
  "exclude": ["node_modules", "tests"],
  "include": ["source"]
}
